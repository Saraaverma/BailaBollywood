<html>
<head>
  <title>Blogs </title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.0.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>

</head>
<body style="background:linear-gradient(to right,#ff5f6d,#f7b733);">
<div class="container">
  <% blogs.forEach( blog => {  if(blog.tag.localeCompare("Bollywood")==0){%>
    <div class="container" style="margin-top: 50px; border: 1px dashed black; padding-bottom: 30px; padding-top:30px">
      <div class="row">
        <div class="col-md-5">
          <div class="container">
            <img style="width: 100%; height: auto;" src="/uploads/<%= blog.image %>" alt="image">
          </div>
        </div>
        <div class="col-md-7 ">
          <div class="container">
          
            <div >
              <p ><span style="padding:5px;color:black; border:1px black solid"><%= blog.time %> </span></p>
             <h1 style="padding:5px;color:black;"><%= blog.title %></h1>
             
             
             <p style="color:black;" class="target"><%= blog.content  %> .......</p>
            <a href="/blogs/posts/<%= blog._id %>"> 
             <button style="background:linear-gradient(to right,#ff5f6d,#f7b733); border:2px solid #f7b733"> Read More</button>
            </div>
          </a>
        </div>
        </div>
      </div>

    </div>
      
   

  <%  } }); %>
</div>
<script>
  $(".target").each(function(){
    let text = ( $(this).text());
    text = text.substring(0,200);
    let html = $.parseHTML(text);
    $(this).empty();
    $(this).append(html);
  });
</script>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>