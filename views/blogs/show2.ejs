<html>
  <head>
    <title><%=blog.title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.0.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
    
   <script>
      $(document).ready(function(){
    let text = ( $("#target").text());
    let html = $.parseHTML(text);
    $("#target").empty();
    $("#target").append(html);
  
});
    </script>
    
  </head>
<body style="background:linear-gradient(to right,#ff5f6d,#f7b733);">
  <div class="container"> 
<div class="container">
  <!--  Blog Title-->
  <div class="text-center" style="margin-top:25px ;margin-bottom:25px">
    <h1 class="text-center display-4" style="color:blanchedalmond; padding-top:20px" ><%= blog.title %></h1>
    <!--  Blog DAte && Blog Creator-->
    <h5 class="text-muted"><%= blog.time %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Posted By: <%= blog.creator %></h5>
  
    
  </div>
    <!---- Blog Image-->
    <div class="text-center">
    <img class="img-responsive" style="width: 80%; height:auto;" src="/uploads/<%= blog.image%>" alt="blog-image">
    </div>
    <div class="container" style="margin-top:25px; margin-bottom:35px" >
    <!---  Blog Content -->
      <p id="target" style="word-wrap:break-word;" ><%= blog.content %></p>
    </div>
  </div>
  <div class="container">
    <a href="/blogs/<%=blog._id%>/subBlogs/new">
    <button style="margin-top: 20px; border:1px solid #f7b733; width:150px; background:linear-gradient(to bottom,#ff5f6d,#f7b733);" type="submit">Add Sub-Blog </button>
  </a>
  </div>
  
  <div class="container" style="margin-top:100px"  >
    
      <% blog.comments.forEach(comment=>{ %>
        <div class="container" style="border:darkgreen 2px solid">
        <div class="media" style="margin-top: 10px;">
            <div class="media-body">
            <h5 class="mt-0"><%=comment.author.username%> </h5>
            <%= comment.text %>
        </div>
        </div>
    
    <form action="/blogs/posts/<%=blog._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
      <button style="margin-top: 20px; border:1px solid #f7b733; width:150px; background:linear-gradient(to bottom,#ff5f6d,#f7b733);" type="submit">Delete </button>
    </form>
  </div>
      <% }); %>
  </div>
</div>

<!--Boot Strap-->  
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>